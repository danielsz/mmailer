#!/usr/bin/env ruby

### Preliminaries to make the `require`'s below work

# resolve bin path, ignoring symlinks
require "pathname"
bin_file = Pathname.new(__FILE__).realpath

# add self to libpath
$:.unshift File.expand_path("../../lib", bin_file)

###

require 'mmailer'
require 'thor'
require 'mmailer/commands'

MyCLI.start(ARGV)
